<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="16dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:layout_marginVertical="16dp"
            android:textStyle="bold"

            />


        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:cardCornerRadius="100dp"
            android:layout_gravity="center"
            app:cardBackgroundColor="@color/greenish"
            android:elevation="10dp">

            <TextView
                android:id="@+id/tvInitials"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="WD"
                android:textColor="@color/dark_green"
                android:textSize="40sp" />

        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/tvUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="William Dabah"
            android:textColor="@color/dark_green"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/tvEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="will@gmail.com" />


        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="30dp"
            >

            <RelativeLayout
                android:padding="10dp"
                android:id="@+id/btnOrders"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:background="@drawable/green_bordered_btn_bg"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_marginStart="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="My Orders"
                    android:layout_centerVertical="true"
                    android:textColor="@color/dark_green" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
                    app:tint="@color/greyish" />

            </RelativeLayout>

            <RelativeLayout
                android:padding="10dp"
                android:id="@+id/btnMyProducts"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:background="@drawable/green_bordered_btn_bg"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_marginStart="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="My Products"
                    android:layout_centerVertical="true"
                    android:textColor="@color/dark_green" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
                    app:tint="@color/greyish" />

            </RelativeLayout>


            <RelativeLayout
                android:padding="10dp"
                android:id="@+id/btnHelp"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:background="@drawable/green_bordered_btn_bg"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_marginStart="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Help"
                    android:layout_centerVertical="true"
                    android:textColor="@color/dark_green" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
                    app:tint="@color/greyish" />

            </RelativeLayout>

            <RelativeLayout
                android:padding="10dp"
                android:id="@+id/btnAbout"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:background="@drawable/green_bordered_btn_bg"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_marginStart="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="About"
                    android:layout_centerVertical="true"
                    android:textColor="@color/dark_green" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
                    app:tint="@color/greyish" />

            </RelativeLayout>


        </androidx.appcompat.widget.LinearLayoutCompat>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnLogout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_bg"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="40dp"
                android:backgroundTint="@android:color/holo_red_light"
                android:text="Logout"
                android:textColor="@color/white"
                android:textAllCaps="false"
                />

        </RelativeLayout>


    </androidx.appcompat.widget.LinearLayoutCompat>

</layout>